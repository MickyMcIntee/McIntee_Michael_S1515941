<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:minWidth="600dp"
    android:minHeight="350dp"
    android:padding="6dp"
    android:background="@drawable/scrollborder"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/infoView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textAppearance="@style/Font"
        android:text="@string/searchterms"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:id="@+id/locationViewHor"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/locationViewVer"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/locationView"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/labelLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/lablocation"
                    android:textAppearance="@style/Font"
                    android:gravity="right"/>
                <EditText
                    android:id="@+id/editLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@drawable/border"
                    android:textAppearance="@style/Font"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/titleView"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/labelTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:textAppearance="@style/Font"
                    android:text="@string/labtitle"
                    android:gravity="right"/>
                <EditText
                    android:id="@+id/editTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAppearance="@style/Font"
                    android:background="@drawable/border"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/origDateFromView"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/labelOrigFrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/fromdate"
                    android:textAppearance="@style/Font"
                    android:gravity="right"/>
                <EditText
                    android:id="@+id/editOrigFrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="none"
                    android:textAppearance="@style/Font"
                    android:background="@drawable/border"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/origDateToView"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/labelOrigTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:textAppearance="@style/Font"
                    android:text="@string/todate"
                    android:gravity="right"/>
                <EditText
                    android:id="@+id/editOrigTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="none"
                    android:textAppearance="@style/Font"
                    android:background="@drawable/border"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/locationViewHor2"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/catView"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/labelCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/labcategory"
                    android:textAppearance="@style/Font"
                    android:gravity="right"/>
                <FrameLayout android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:background="@drawable/border">
                    <Spinner
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:popupBackground="@color/colorPastelBG"
                        android:popupTheme="@style/Font"
                        android:id="@+id/editCat"
                        android:spinnerMode="dropdown"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/depthView"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/labelDepth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:textAppearance="@style/Font"
                    android:text="@string/labdepth"
                    android:gravity="right"/>
                <EditText
                    android:id="@+id/editDepth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:background="@drawable/border"
                    android:textAppearance="@style/Font"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/magView"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/labelMag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Font"
                    android:layout_weight="0.75"
                    android:text="@string/labmagnitude"
                    android:gravity="right"/>
                <EditText
                    android:id="@+id/editMag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textAppearance="@style/Font"
                    android:background="@drawable/border"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:gravity="bottom">
        <Button
            android:id="@+id/dialogButtonSearch"
            android:layout_width="0dp"
            android:textAppearance="@style/Font"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:text="@string/searchtext"
            />
        <Button
            android:id="@+id/dialogButtonBack"
            android:layout_width="0dp"
            android:textAppearance="@style/Font"
            android:layout_marginLeft="2dp"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/back"/>
    </LinearLayout>
</LinearLayout>