<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".ListDataActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPastelBG"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.50"
        android:padding="3dp"
        android:orientation="vertical"
        android:background="@color/colorPastelBG">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fromDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Font"
                android:gravity="right"
                android:layout_weight="1"
                android:text="@string/fromdate"/>
            <EditText
                android:id="@+id/fromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="0.60"
                android:textAppearance="@style/Font"
                android:hint="Click for Date"
                android:gravity="center"
                android:focusable="false"
                android:inputType="none"
                android:background="@drawable/border"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/toDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textAppearance="@style/Font"
                android:layout_weight="1"
                android:text="@string/todate"/>
            <EditText
                android:id="@+id/toDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.60"
                android:hint="Click for Date"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:textAppearance="@style/Font"
                android:focusable="false"
                android:inputType="none"
                android:background="@drawable/border"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/calculate"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/button"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/Font"
                android:id="@+id/calculateButton"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/scrollborderdark"
                android:orientation="vertical"
                android:padding="3dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/calculations"
                    android:gravity="center"
                    android:textAppearance="@style/Font"
                    android:textColor="@color/colorPastelTextButton"
                    android:id="@+id/northernly"/>
                <View style="@style/Rule"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/calculations"
                    android:gravity="center"
                    android:textColor="@color/colorPastelTextButton"
                    android:textAppearance="@style/Font"
                    android:id="@+id/southernly"/>
                <View style="@style/Rule"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/calculations"
                    android:textColor="@color/colorPastelTextButton"
                    android:gravity="center"
                    android:textAppearance="@style/Font"
                    android:id="@+id/westernly"/>
                <View style="@style/Rule"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/calculations"
                    android:textColor="@color/colorPastelTextButton"
                    android:gravity="center"
                    android:textAppearance="@style/Font"
                    android:id="@+id/easternly"/>
                <View style="@style/Rule"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/calculations"
                    android:textColor="@color/colorPastelTextButton"
                    android:gravity="center"
                    android:textAppearance="@style/Font"
                    android:id="@+id/greatDepth"/>
                <View style="@style/Rule"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/calculations"
                    android:textColor="@color/colorPastelTextButton"
                    android:gravity="center"
                    android:textAppearance="@style/Font"
                    android:id="@+id/minDepth"/>
                <View style="@style/Rule"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPastelTextButton"
                    android:gravity="center"
                    android:text="@string/calculations"
                    android:textAppearance="@style/Font"
                    android:id="@+id/greatMag"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:layout_weight="0.5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"/>
            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="-22dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/searchicon"
                android:layout_weight="0.5"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPastelBG">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/selectionDisplay"
                android:orientation="vertical"
                >
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>